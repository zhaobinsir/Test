<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="calendartitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="calendarconTv">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="calendarinfoTv">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="boldtitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#F99E0E</item>
    </style>

    <style name="calendarconTv12">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="calendarconTv13">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="calendarconTv15">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#444444</item>
    </style>
</resources>
